<% @flowers.each do |f| %>
<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-block">
    <h4 class="card-title">
      <%= f.name  %>
    </h4>

    <p class="card-text">
      <%= f.smokeable %>
    </p>
    <span class="icon">$</span><%= f.price %>
    <%= link_to "Details", flower_path(f),class: "btn btn-primary" %>
  </div>
</div>
<% end %>
